        <% if (error) { %>
            <div class="alert"><%= error %></div>
        <% } %>
        
        <form method="POST" action="/login">
            <div class="form-group">
                <label>UsuÃ¡rio</label>
                <input type="text" name="username" required>
            </div>
            

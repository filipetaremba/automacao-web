<% if (typeof error !== 'undefined' && error) { %>
    <div class="alert alert-error"><%= error %></div>
<% } %>

<h1>Dashboard</h1>

<div class="stats">
    <div class="stat-card">
        <h3><%= bookStats.pending %></h3>
        <p>üìö Livros Pendentes</p>
    </div>
    <div class="stat-card">
        <h3><%= bookStats.sent %></h3>
        <p>‚úÖ Livros Enviados</p>
    </div>
    <div class="stat-card">
        <h3><%= bookStats.error %></h3>
        <p>‚ùå Com Erro</p>
    </div>
</div>

<div class="card">
    <h2>Status do Sistema</h2>
    <p><strong>WhatsApp:</strong> <%= whatsappInfo.isReady ? '‚úÖ Conectado' : '‚ùå Desconectado' %></p>
    <p><strong>Agendador:</strong> <%= schedulerStatus.isRunning ? '‚úÖ Ativo' : '‚ùå Inativo' %></p>
    <% if (schedulerStatus.nextExecution) { %>
        <p><strong>Pr√≥ximo envio:</strong> <%= schedulerStatus.nextExecution %></p>
    <% } %>
    <% if (schedulerStats && schedulerStats.lastSendDate) { %>
        <p><strong>√öltimo envio:</strong> <%= schedulerStats.lastSendDate %></p>
    <% } %>
</div>

<div class="card">
    <h2>√öltimos Envios</h2>
    <% if (recentLogs && recentLogs.length > 0) { %>
        <table>
            <thead>
                <tr>
                    <th>Livro</th>
                    <th>Status</th>
                    <th>Data</th>
                </tr>
            </thead>
            <tbody>
                <% recentLogs.forEach(log => { %>
                    <tr>
                        <td><%= log.book_title || 'N/A' %></td>
                        <td>
                            <span class="badge <%= log.status === 'success' ? 'badge-sent' : 'badge-error' %>">
                                <%= log.status %>
                            </span>
                        </td>
                        <td><%= new Date(log.sent_at).toLocaleString('pt-BR') %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <p>Nenhum envio realizado ainda.</p>
    <% } %>
</div>